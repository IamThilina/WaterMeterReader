<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:orientation="vertical"
tools:context="com.imperialsoupgmail.tesseractexample.DrawContours">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="74dp">
    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/sb_edge_threshold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Edge Threshold"
        android:id="@+id/edge_textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="0"
    android:id="@+id/text_edge_threshold"
    android:layout_gravity="center_horizontal"
    android:hint="0"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Extracted text"
    android:id="@+id/text_extracted_text"
    android:layout_gravity="center_horizontal"
    android:hint="0"/>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:layout_gravity="center_horizontal"
    android:id="@+id/filtered_rect_view">

</LinearLayout>

<ImageView
    android:id="@+id/countour_image"
    android:layout_width="1000px"
    android:layout_height="1500px" />
</LinearLayout>
